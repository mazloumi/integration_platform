# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
POSTGRES_DB=json_mapper_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/json_mapper_db

# Redis (optional)
# REDIS_URL=redis://redis:6379/0

# Google Cloud (optional - only needed for Pub/Sub)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Site Configuration
# IMPORTANT: Set this to your domain in production
# This URL is used for:
# - Webhook URL generation (e.g., https://yourdomain.com/webhook/abc123/)
# - Pub/Sub push endpoints (e.g., https://yourdomain.com/pubsub/xyz789/)
# - IntegrationConfiguration.get_webhook_url() method
SITE_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production Example:
# SITE_URL=https://integrations.yourdomain.com
# FRONTEND_URL=https://app.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://integrations.yourdomain.com
# ALLOWED_HOSTS=integrations.yourdomain.com,yourdomain.com
